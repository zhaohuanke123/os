<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="topMainPane" fx:id="topMainPane" prefHeight="494.0" prefWidth="1224.0" stylesheets="@ProcessControlApp.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.os.applications.processControlApp.ProcessControlAppController">
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <BorderPane fx:id="titleBar" layoutX="40.0" layoutY="40.0"
                onMouseDragged="#dragBar" onMousePressed="#pressBar"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <left>
            <HBox fx:id="titleBarL" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT"
                  prefHeight="40.0" prefWidth="134.0" BorderPane.alignment="CENTER">
                <Label fx:id="title" nodeOrientation="LEFT_TO_RIGHT" prefHeight="38.0" prefWidth="194.0"
                       text="进程管理器" HBox.hgrow="ALWAYS">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../img/process.png"/>
                        </ImageView>
                    </graphic>
                    <padding>
                        <Insets left="15.0"/>
                    </padding>
                </Label>
            </HBox>
        </left>
        <right>
            <HBox fx:id="titleBarR" alignment="CENTER_RIGHT"
                  nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="55.0"
                  spacing="10.0" BorderPane.alignment="CENTER">
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0"
                        mnemonicParsing="false" onMouseClicked="#showDescription" prefHeight="35.0" prefWidth="35.0">
                    <graphic>
                        <ImageView id="barIcon" fitHeight="15.0" fitWidth="15.0" nodeOrientation="INHERIT"
                                   pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../img/help.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0"
                        mnemonicParsing="false" onMouseClicked="#minimizeStage" prefHeight="35.0" prefWidth="35.0">
                    <graphic>
                        <ImageView id="barIcon" fitHeight="15.0" fitWidth="15.0" nodeOrientation="INHERIT"
                                   pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../img/minimize.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0"
                        mnemonicParsing="false" onMouseClicked="#resizeStage" prefHeight="0.0">
                    <graphic>
                        <ImageView disable="true" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <Image url="@../../img/change.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" layoutX="774.0"
                        layoutY="15.0" mnemonicParsing="false" onMouseClicked="#closeStage" prefHeight="0.0">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../img/close.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </right>
    </BorderPane>

    <TabPane fx:id="TabP" layoutY="29.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="5.0"
             AnchorPane.rightAnchor="5.0"
             AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="45.0">

        <Tab id="existTab" text="运行进程">
            <AnchorPane fx:id="mainPane" layoutX="10.0" layoutY="47.0" minHeight="0.0" minWidth="0.0" prefHeight="437.0"
                        prefWidth="1008.0" stylesheets="@ProcessControlApp.css" AnchorPane.bottomAnchor="5.0"
                        AnchorPane.rightAnchor="5.0"
                        AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="46.0">
                <TableView fx:id="processTable" layoutX="30.0" layoutY="22.0" nodeOrientation="LEFT_TO_RIGHT"
                           prefHeight="354.0" prefWidth="940.0" stylesheets="@ProcessControlApp.css"
                           AnchorPane.bottomAnchor="38.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="150.0"
                           AnchorPane.topAnchor="22.0">
                    <columns>
                        <TableColumn fx:id="processName" prefWidth="75.0" text="进程编号"/>
                        <TableColumn fx:id="processState" prefWidth="75.0" text="进程状态"/>
                        <TableColumn fx:id="whichFile" prefWidth="75.0" text="执行文件"/>
                        <TableColumn fx:id="havedDevice" prefWidth="104.0" text="使用设备"/>
                        <TableColumn fx:id="havedMemory" minWidth="0.0" prefWidth="124.0" text="占用内存"/>
                        <TableColumn fx:id="havedPid" prefWidth="101.0" text="进程控制块"/>
                        <TableColumn fx:id="result" prefWidth="109.0" text="当前执行结果"/>
                        <TableColumn fx:id="progressBar" minWidth="0.0" prefWidth="124.0" text="进程完成进度"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <VBox fx:id="creatProButtons" alignment="CENTER" stylesheets="@ProcessControlApp.css"
                      AnchorPane.rightAnchor="0">
<!--                    一个label：调节倍速-->
                    <Label id="creatProLabel" text="调节倍速" textFill="Black"/>
                    <Slider fx:id="creatProSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="1.0"
                            minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true"
                            value="1.0"/>
                    <CheckBox
                            fx:id="continueButton" mnemonicParsing="false" text="自动新建进程"/>
                </VBox>

            </AnchorPane>
        </Tab>

        <Tab fx:id="deadTab" text="已完成进程">
            <AnchorPane fx:id="mainPane1" layoutX="10.0" layoutY="47.0" minHeight="0.0" minWidth="0.0"
                        prefHeight="437.0" prefWidth="1008.0" stylesheets="@ProcessControlApp.css"
                        AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0"
                        AnchorPane.topAnchor="46.0">
                <TableView fx:id="processTable1" layoutX="30.0" layoutY="22.0" nodeOrientation="LEFT_TO_RIGHT"
                           prefHeight="354.0" prefWidth="940.0" stylesheets="@ProcessControlApp.css"
                           AnchorPane.bottomAnchor="38.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="52.0"
                           AnchorPane.topAnchor="22.0">
                    <columns>
                        <TableColumn fx:id="processName1" prefWidth="75.0" text="进程编号"/>
                        <TableColumn fx:id="processState1" prefWidth="75.0" text="进程状态"/>
                        <TableColumn fx:id="whichFile1" prefWidth="75.0" text="执行文件"/>
                        <TableColumn fx:id="havedDevice1" prefWidth="104.0" text="使用设备"/>
                        <TableColumn fx:id="havedMemory1" minWidth="0.0" prefWidth="124.0" text="占用内存"/>
                        <TableColumn fx:id="havedPid1" prefWidth="101.0" text="进程控制块"/>
                        <TableColumn fx:id="result1" prefWidth="109.0" text="当前执行结果"/>
                        <TableColumn fx:id="progressBar1" minWidth="0.0" prefWidth="124.0" text="进程完成进度"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </AnchorPane>
        </Tab>
    </TabPane>

</AnchorPane>
