<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="topMainPane" prefHeight="484.0" prefWidth="503.0" stylesheets="@SystemFileApp.css"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.os.applications.systemFileApp.SystemFileAppController">
    <BorderPane fx:id="titleBar" layoutX="50.0" layoutY="50.0" onDragDone="#dragBarDone" onMouseDragged="#dragBar"
                onMousePressed="#pressBar" onMouseReleased="#releaseBar" stylesheets="@SystemFileApp.css"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <left>
            <HBox fx:id="titleBarL" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="134.0"
                  stylesheets="@../helpApp/HelpApp.css" BorderPane.alignment="CENTER">
                <Label fx:id="title" nodeOrientation="LEFT_TO_RIGHT" prefHeight="38.0" prefWidth="194.0"
                       text="系统文件表" HBox.hgrow="ALWAYS">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../img/task.png"/>
                        </ImageView>
                    </graphic>
                    <padding>
                        <Insets left="15.0"/>
                    </padding>
                </Label>
            </HBox>
        </left>
        <right>
            <HBox id="titleBarR" alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308"
                  maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="55.0"
                  spacing="10.0" BorderPane.alignment="CENTER">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <cursor>
                    <Cursor fx:constant="DEFAULT"/>
                </cursor>
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0"
                        mnemonicParsing="false" onMouseClicked="#minimizeStage" prefHeight="35.0" prefWidth="35.0">
                    <graphic>
                        <ImageView id="barIcon" fitHeight="15.0" fitWidth="15.0" nodeOrientation="INHERIT"
                                   pickOnBounds="true" preserveRatio="true">
                            <cursor>
                                <Cursor fx:constant="DEFAULT"/>
                            </cursor>
                            <Image url="@../../img/minimize0.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0"
                        mnemonicParsing="false" onMouseClicked="#resizeStage" prefHeight="0.0">
                    <graphic>
                        <ImageView disable="true" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <Image url="@../../img/change.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="barIcon" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" layoutX="774.0"
                        layoutY="15.0" mnemonicParsing="false" onMouseClicked="#closeStage" prefHeight="0.0">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../img/close0.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </right>
    </BorderPane>
    <AnchorPane fx:id="mainPane" layoutX="2.0" layoutY="44.0" minHeight="0.0" minWidth="0.0" prefHeight="437.0"
                prefWidth="497.0" stylesheets="@SystemFileApp.css" AnchorPane.bottomAnchor="5.0"
                AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="45.0">
        <TableView fx:id="fileDetailTable" layoutX="265.0" layoutY="45.0" prefHeight="373.0" prefWidth="169.0"
                   AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0">
            <columns>
                <TableColumn fx:id="fileDetail" prefWidth="151.0" text="执行内容"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <TableView fx:id="executableFileTable" layoutX="42.0" layoutY="22.0" onMousePressed="#selectFile"
                   prefHeight="390.0" prefWidth="196.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="40.0"
                   AnchorPane.topAnchor="20.0">
            <columns>
                <TableColumn fx:id="fileName" prefWidth="168.0" text="可执行文件"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </AnchorPane>

</AnchorPane>
